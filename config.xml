<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bindersfullofcode.angular-bootstrapping" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AngularBootstrapping</name>
    <description>
      A simple AngularJS Application demonstrating Cordova/Angular Bootstrapping.
    </description>
    <author email="dev@cordova.apache.org" href="https://bindersfullofcode.com">
        Cooper Filby
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~3.9.2" />
    <engine name="android" spec="~4.1.1" />
    <engine name="browser" spec="~4.0.0" />
    <plugin name="cordova-plugin-geolocation" spec="~2.2.0" />
</widget>
